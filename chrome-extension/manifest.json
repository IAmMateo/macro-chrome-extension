{
    "manifest_version": 2,

    "name": "Macro",
    "description": "Macro provides a platform for web users to access, create, and distribute keyboard shortcuts for their favorite websites.",
    "version": "1.0",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "options_page": "options.html",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html",
        "default_title": "Click here!"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "webNavigation",
        "storage",
        "http://*/",
        "https://*/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "commands": {
        "toggle-popup": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Toggle Popup"
        }
    }
}
